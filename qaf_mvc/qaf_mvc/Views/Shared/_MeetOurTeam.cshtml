@model System.Collections.Generic.IEnumerable<Employee>

<div class="container my-5 ">

    <div class="row s-content-margin">

        <div class="col">

            <h2 class="section-title"><strong>Meet Our Team</strong></h2><hr>

        </div>

    </div>

    <div class="row align-items-center justify-content-center">
        @foreach (var employee in Model)
        {
            <div class="col col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">

                <div class="mx-5 my-5">

                    <div class="card">

                        <a asp-controller="OurTeam" asp-action="Member" asp-route-id="@employee.Id">
                            <img src="@employee.PhotoUrl" alt="" class="img-fluid">
                        </a>

                        <div class="card-body">

                            <h6 class="qaf-text-dark"><a asp-controller="OurTeam" asp-action="Member" asp-route-id="@employee.Id">@employee.Name</a></h6>

                            <h6><small>@employee.Title</small></h6>

                        </div>

                    </div>
                </div>

            </div>
        }
    </div>

    
</div>